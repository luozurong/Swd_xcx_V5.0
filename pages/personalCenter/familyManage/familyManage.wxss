page {
  height: 100%;
}
.contain {
  width: 100%;
  height: 100%;
  overflow: scroll;
  background:rgba(246,248,250,1);
}
.list {
  margin:17rpx 30rpx 140rpx;
}
.item {
  width:690rpx;
  margin-bottom: 17rpx;
  /* padding: 31rpx 29rpx 26rpx 27rpx;
  box-sizing: border-box; */
  background:rgba(255,255,255,1);
  border-radius:8rpx;
}
.base-msg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}
.name {
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.name text {
  font-size:24rpx;
  font-weight:400;
}
.phone {
  font-size:32rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.bind {
  width: 96rpx;
  height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
	background-color: rgba(58, 199, 86, .1);
	border-radius: 8rpx;
	border: solid 1rpx rgba(58, 199, 86, .1);
  color: #3ac756;
}
.nobind {
	width: 96rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background-color: #f6f8fa;
  color: #aeafb2;
	border-radius: 8rpx;
}
.onbind {
  width: 96rpx;
  height: 40rpx;
}
.urgency {
  display: flex;
  justify-content: space-between;
}
.urgency-list {
  display: flex;
}
.urgency-item {
  display: flex;
  align-items: center;
  margin-right: 16rpx;
  font-size:24rpx;
  color:rgba(102,102,102,1);
}
.urgency-item image {
  width:24rpx;
  height:24rpx;
  margin-right: 4rpx;
}
.edit {
  font-size:24rpx;
  color:rgba(174,175,178,1);
}
.edit image {
  width:22rpx;
  height:22rpx;
}
.van-button {
  text-align: center;
  height: 100%!important;
  padding-top: 25%!important;
  }
.sure {
  position: absolute;
  bottom: 20px;
  margin: 18rpx 224rpx;
  width:300rpx;
  height:80rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 80rpx;
  background:linear-gradient(90deg,rgba(115,230,57,1),rgba(58,199,86,1));
  color:rgba(255,255,255,1);
  border-radius:40rpx;
}
  