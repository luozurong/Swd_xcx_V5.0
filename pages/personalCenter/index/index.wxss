/* pages/personalCenter/index/index.wxss */

.myIndex {
  line-height: 1;
}

.myIndex image {
  width: 100%;
  height: 100%;
}

.myIndex .myIndex_top {
  position: relative;
  padding: 0 20rpx 36rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.myIndex .myIndex_top .msg {
  display: flex;
  align-items: center;
}

.myIndex .myIndex_top .msg .pic_con {
  width: 96rpx;
  height: 96rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.myIndex .myIndex_top .msg .name {
  font-weight: bold;
  font-size: 16px;
  color: #333;
}

.myIndex .myIndex_top .msg .name image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 6rpx;
}

.myIndex .myIndex_top .msg .tag {
  margin-top: 20rpx;
  font-size: 20rpx;
  color: #fff;
}

.myIndex .myIndex_top .msg .tag text {
  padding: 5rpx 9rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
}

.myIndex .myIndex_top .msg .tag .first {
  background: #ebb33c;
}

.myIndex .myIndex_top .msg .tag .second {
  background: #30d952;
}

.myIndex .myIndex_top .position {
  position: absolute;
  top: 20rpx;
  right: 0rpx;
  display: flex;
  align-items: center;
}
.myIndex .myIndex_top .set {
  width: 36rpx;
  height: 36rpx;
  margin-right: 40rpx;
}
.myIndex .myIndex_top .customer {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 128rpx;
	height: 60rpx;
  padding: 0;
  font-size: 28rpx;
	color: #ffffff;
	background-image: linear-gradient(90deg, 
		#87e05a 0%, 
		#3ac756 100%), 
	linear-gradient(
		#000000, 
		#000000);
	background-blend-mode: normal, 
		normal;
	border-radius: 30rpx 0px 0px 30rpx;
  border: 0 none;
}
button::after{ 
  border:none; 
}
.myIndex .myIndex_top .customer image {
  width: 40rpx;
	height: 40rpx;
  margin-right: 12rpx;
}
.myIndex .menu_con {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  text-align: center;
}

.myIndex .menu_con .name {
  margin-top: 16rpx;
  font-size: 12px;
  color: #a8a8a8;
}
.myIndex .menu_con .unit {
  font-size: 20rpx;
  color: #666666;
}
.myIndex .menu_con .num {
  margin-right: 5rpx;
  font-size: 36rpx;
  color: #333333;
}

/* 我的订单 */
.myIndex .myorder {
	height: auto;
  padding: 34rpx 30rpx;
  margin-bottom: 20rpx;
	background-color: #ffffff;
}
.myIndex .myorder .title {
  display: flex;
  justify-content: space-between;
  font-weight: bold;
  font-size: 16px;
	color: #333333;
}
.myIndex .myorder .title .right {
  display: flex;
  align-items: center;
  font-size: 14px;
  font-weight: normal;
	color: #a8a8a8;
}
.myIndex .myorder .title image {
  width: 14rpx;
  height: 32rpx;
  margin-left: 10rpx;
}
.myIndex .order_menu {
  display: flex;
  justify-content: space-between;
  margin-top: 36rpx;
  text-align: center;
  font-size: 12px;
	color: #333333;
}
.myIndex .order_menu .order_li {
  position: relative;
}
.myIndex .order_menu .order_li image {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 5rpx;
}
.myIndex .order_menu .order_li .num {
  position: absolute;
  top: -15rpx;
  right: -1rpx;
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
	color: #ff6f26;
	background-color: #ffffff;
	border: solid 2rpx #ff6f26;
  border-radius: 50%;
}

/* 医疗服务 */
.myIndex .service .order_menu .order_li image {
  width: 64rpx;
  height: 64rpx;
}

/* 亲友管理 */
.myIndex .friends .order_menu .order_li image {
  width: 72rpx;
	height: 72rpx;
  margin-bottom: 10rpx;
	border-radius: 36rpx;
}
.myIndex .member.order_menu {
  display: flex;
  justify-content: start;
}
.myIndex .member.order_menu .order_li {
  margin-right: 76rpx;
}
.myIndex .member.order_menu .order_li.no_margin_right{
  margin-right: 0rpx;
}