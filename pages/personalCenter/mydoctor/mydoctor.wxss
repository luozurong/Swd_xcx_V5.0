page {
  height: 100%;
}
.contain {
  width: 100%;
  height: 100%;
  overflow: scroll;
  background:rgba(246,248,250,1);
}
.list {
  width:748rpx;
  background:rgba(255,255,255,1);
  box-sizing: border-box;
  border-top: 1rpx solid #F6F8FA;
}
.item {
  display: flex;
  margin-left: 30rpx;
  margin-top: 12rpx;
  box-shadow:0px 1px 0px 0px rgba(235,235,235,1);
}
.item:nth-last-child(1) {
  box-shadow:0px 1px 0px 0px rgb(255, 255, 255);
}
.icon {
  width:80rpx;
  height:80rpx;
  margin-top: 40rpx;
  border-radius:50%;
}
.card {
  margin: 46rpx 22rpx 38rpx 29rpx;
  width: 580rpx;
}
.job {
  display: flex;
  justify-content: space-between;
}
.job-name text:nth-child(1) {
  font-size:32rpx;
  font-weight:bold;
  margin-right: 20rpx;
}
.job-name text:nth-child(2) {
  font-size:24rpx;
  color:rgba(58,199,86,1);
}
.ranking {
  display: flex;
  align-items: center;
}
.ranking image {
  width:20rpx;
  height:28rpx;
  margin-right: 8rpx;
}
.location {
  font-size:24rpx;
  margin-top: 12rpx;
  color:rgba(168,168,168,1);
}
.descript {
  font-size: 28rpx;
  margin-top: 20rpx;
  background:rgba(255,255,255,1);
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}