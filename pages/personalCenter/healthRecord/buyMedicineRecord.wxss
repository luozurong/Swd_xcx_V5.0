/* pages/personalCenter/healthRecord/buyMedicineRecord.wxss */

.record_li {
  width: 650rpx;
  height: 98rpx;
  line-height: 1;
  margin: 20rpx auto;
  padding: 22rpx 22rpx 32rpx 18rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.record_li image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
}

.record_li .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 12px;
  color: #aeafb2;
}

.record_li .title .title_left {
  display: flex;
  align-items: center;
  font-weight: bold;
  font-size: 16px;
  color: #333;
}

.record_li .drugs_text {
  margin-top: 24rpx;
  font-size: 14px;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
