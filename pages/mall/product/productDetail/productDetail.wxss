@import "/pages/mall/wxParse/wxParse.wxss";
button:after{ 
  border: none;
}
page,view,text,image,button{
  padding: 0;
  margin: 0;
}
page{
  background-color:#f5f7fa;
}
.swiper-wrap{
  width: 100%;
  height: 750rpx;
}
.productDetail-wrap{
  background-color: #fff;
  padding: 0 30rpx 20rpx;
  margin-bottom: 20rpx;
}
.productDetail-wrap-container{
  display: flex;
  align-items: center;
}
.productDetail-wrap-name{
  flex-grow: 2;
  margin-top: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.productDetail-wrap-share{
  flex-shrink: 0;
  display: flex;
  align-items: center;
  align-self: flex-start;
  margin-top: 22rpx;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 10;
  width: 185rpx;
  height: 88rpx;
  border-radius: 44rpx 0 0 40rpx;
  background-color: rgba(255, 110, 38, 0.7);
  color: #fff;
  font-size: 20rpx;
  text-align: center;
}
button{
  line-height:1;
}
.productDetail-wrap-share view{
  width: 100%;
}
.productDetail-wrap-share view view{
  text-align: center;
  width: 100%;
}
.productDetail-wrap-share view view:first-child{
  font-size: 28rpx;
  margin-top: -6rpx;
}
.productDetail-wrap-share button{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  width: 185rpx;
  height: 88rpx;
  border-radius: 44rpx 0 0 40rpx;
  background-color: transparent;
  
}
.home-product-tip{
  height: 42rpx;
}
.home-product-tip text{
	font-size: 20rpx;
  line-height: 1;
  padding: 0rpx 10rpx;
  border-radius: 8rpx;
	color: #3ac756;
  border: 1rpx solid #3ac756;
  margin-right: 10rpx;
}
.home-product-wrap{
  display: flex;
  margin-top: 3rpx;
  font-size: 24rpx;
  padding-bottom: 6rpx;
}
.home-product-ship{
  flex-grow: 2;
  text-align: right;
  color: #aeafb2;
  margin-top: 18rpx;
}
.home-product-price{
  display: flex;
  display: -webkit-flex;
  flex-shrink: 0;
}
.home-product-price>text:first-child text:first-child{
  font-size: 48rpx;
  color: #ff6f26;
}
.home-product-price>text:first-child text:first-child:before{
  content: "￥";
  font-size: 36rpx;
  margin-right: -6rpx;
}
.home-product-price>text:first-child text:last-child{
  font-size: 36rpx;
  color: #ff6f26;
}
.home-product-pre{
  text-decoration: line-through;
  color: #d2d2d4;
  font-size: 24rpx;
  box-sizing: border-box;
  padding-top: 26rpx;
  margin-left: 13rpx;
}
.home-product-pre::before{
  content: "￥";
  margin-right: -6rpx;
  align-content: flex-end
}
.home-product-cart{
  display: flex;
  padding-top: 18rpx 
}
.home-product-cart text{
  color: #aeafb2;
  font-size: 24rpx;
  margin-right: 29rpx;
  align-self: center;
}
.productDetail-content{
  background-color: #fff;
  margin-top: 20rpx;
}
.productDetail-content image{
  width: 100%;
  display: block;
}
.productDetail-content-header{
  display: flex;
  align-items: center;
  padding: 34rpx 30rpx 34rpx;
}
.productDetail-content-header image{
  width: 28rpx;
  height: 28rpx;
}
.productDetail-content-header text{
  font-size: 28rpx;
  margin-left: 7rpx;
	color: #333333;
}
.productDetail-fixed{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  height: 100rpx;
  background:#fff;
  display: flex;
  align-items: center;
}
.productDetail-fixed-floor1{
  color: #666;
  font-size: 24rpx;
  margin-left: 30rpx;
  flex-grow: 2;
}
.productDetail-fixed-floor2{
  width: 190rpx;
	height: 80rpx;
  border: 2rpx solid  #ff6f26;
  background: #fff;
  color: #ff6f26;
  font-size: 28rpx;
  text-align: center;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.productDetail-fixed-floor2{
  position: relative;
}
.productDetail-fixed-floor2 text{
  display: inline-block;
  height: 72rpx;
  width: 186rpx;
  line-height: 72rpx;
  background: #fff;
  border-radius: 48rpx;
}
.productDetail-fixed-floor2 button{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  padding: 0;
  margin: 0;
  height: 80rpx;
  width: 100%;
  border: none;
}
.productDetail-fixed-floor3{
  width: 180rpx;
	height: 80rpx;
	background-image: linear-gradient(90deg, 
		#ffaf41 0%, 
		#ff8441 100%), 
	linear-gradient(
		#f89283, 
		#f89283);
	background-blend-mode: normal, 
		normal;
	border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  margin-left: 20rpx;
  margin-right: 30rpx;
  position: relative;
}
.productDetail-fixed-floor3 button{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 100;
  padding: 0;
  margin: 0;
  height: 80rpx;
  width: 100%;
  border: none;
}
.product-div-height{
  height: 132rpx;
}

.productDetail-serve{
  position: fixed;
  bottom: 16rpx;
  left: 0;
  z-index: 20;
  width: 100%;
}
.productDetail-serve view{
  width: 600rpx;
	height: 80rpx;
	background-image: linear-gradient(90deg, 
		#ffaf41 0%, 
		#ff8441 100%), 
	linear-gradient(
		#f89283, 
		#f89283);
	background-blend-mode: normal, 
		normal;
	border-radius: 40rpx;
  margin-left: 75rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
}
.active{
  opacity: 0.6;
}
.my-order{
  position: relative;
  width: 86rpx;
  height: 86rpx;
  border-radius: 100%;
}
.my-order>view{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  font-size: 24rpx;
	color: #ff6e26;
  height: 86rpx;
  width: 86rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  line-height: 25rpx;
  border-radius: 100%;
  font-weight: bold;
}
.shop-cart-my button{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 110;
  height: 90rpx;
  width: 90rpx;
  border-radius: 100%;
  border:none;
}
.product-price{
  background: #fff;
  padding-left: 30rpx;
  padding-top: 16rpx;
}
.productDetail-fixed-floor1 view{
  width: 85rpx;
}
.productDetail-fixed-floor1 view image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 0 auto;
}
.productDetail-fixed-floor1 view view{
  font-size:20rpx;
  color: #333;
  text-align: center;
  margin-top: 6rpx;
}
button{
  background: transparent;
}
.product-chu {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  background: #fff;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.product-chu .product-customer {
  flex-shrink: 0;
  margin-left: 40rpx;
}
.product-chu .product-customer image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
  display: block;
}
.product-chu .product-customer text {
  display: block;
  text-align: center;
  margin-top: 10rpx;
  font-size: 20rpx;
}
.product-chu .product-zixun {
  flex-shrink: 0;
  margin-left: 50rpx;
}
.product-chu .product-zixun image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
  display: block;
}
.product-chu .product-zixun text {
  display: block;
  text-align: center;
  margin-top: 10rpx;
  font-size: 20rpx;
}
.product-chu .product-other {
  text-align: center;
  flex-shrink: 0;
  border-radius: 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  height: 72rpx;
  flex-grow: 2;
  display: flex;
  justify-content: flex-end;
}
.product-chu .product-other .product-go-pay {
  color: #fff;
  width: 180rpx;
  background-image: linear-gradient(90deg, #ffaf41 0%, #ff8441 100%), linear-gradient(#f89283, #f89283);
  background-blend-mode: normal, normal;
  border-radius: 36rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
  line-height: 72rpx;
}
.product-chu .product-other .product-go-pay text {
  font-size: 20rpx;
}
.product-chu .product-other .product-add-cart {
  background: #fff;
  border: 1px solid #ffaf41;
  color: #ffaf41;
  width: 190rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;

}
.product-chu .product-other .product-add-cart text {
  font-size: 20rpx;
}
.product-content-wrap {
  width: 100%;
  background: #fff;
}
.product-content-wrap .product-content-header {
  height: 97rpx;
  display: flex;
  align-items: center;
  display: -webkit-flex;
  -webkit-align-items: center;
  padding: 0 30rpx;
}
.product-content-wrap .product-content-header text.product-content-line {
  flex-grow: 2;
  border-top: 1px solid #ebebeb;
}
.product-content-wrap .product-content-header text.product-content-name {
  flex-shrink: 0;
  font-size: 28rpx;
  color: #333333;
  margin-left: 7rpx;
  margin: 0 30rpx;
}
.product-content-wrap .productDetail-can {
  margin: 0 30rpx;
  border: 1rpx solid #ccc;
  border-right: none;
  border-bottom: none;
}
.product-content-wrap .productDetail-can > view {
  border-bottom: 1rpx solid #ccc;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
}
.product-content-wrap .productDetail-can > view > view {
  border-right: 1rpx solid #ccc;
  text-align: left;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.product-content-wrap .productDetail-can > view > view:first-child {
  width: 140rpx;
  flex-shrink: 0 !important;
  border-top: none;
  text-align: center;
  padding-left: 0;
}
.product-content-wrap .productDetail-can > view > view:last-child {
  flex-grow: 2;
  white-space:nowrap; 
  overflow:hidden; 
  text-overflow:ellipsis;
}
.productDetail-wrap-name .chu{
  background: #ff6f26;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 4rpx;
  border-radius: 4rpx;
  line-height: 1;
  float: left;
  margin-top: 8rpx;
  margin-right: 10rpx;
}
