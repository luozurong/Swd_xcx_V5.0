page {
  height: 100%;
}
.contain {
  width: 100%;
  height: 100%;
  background:rgba(246,248,250,1);
}
/* .block {
  height: 20rpx;
} */
.list {
  overflow: hidden;
}
.item {
  display: flex;
  width:690rpx;
  height:136rpx;
  margin: 20rpx 30rpx 0 30rpx;
  padding: 32rpx 26rpx 32rpx 23rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
}
.pic image{
  width:72rpx;
  height:72rpx;
}
.conversation {
  width: 557rpx;
  margin-left: 14rpx;
}
.type {
  display: flex;
  justify-content: space-between;
}
.type-name {
  font-size:28rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.type-time {
  font-size:24rpx;
  color:rgba(174,175,178,1);
}
.descript {
  display: flex;
  justify-content: space-between;
}
.descript .msg {
  display: inline-block;
  width: 490rpx;
  font-size:28rpx;
  color:rgba(102,102,102,1);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
} 
.descript .van-badge {
  padding: 20rpx 5rpx!important;
  overflow: visible;

}
.descript .van-info {
  background-color: rgba(255,110,110,1)!important;
}
