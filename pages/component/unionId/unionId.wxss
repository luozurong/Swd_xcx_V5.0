button{
  border: none;
}
button::after{
  border: none
}
.unionid-fixed{
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5)
}
.unionid-fixed-wrap{
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10001;
  margin: auto;
  width: 540rpx;
	height: 319rpx;
  background: #fff;
  border-radius: 26rpx;
}
.unionid-fixed-title{
  text-align: center;
  font-size: 32pxr;
  color: #333;
  font-weight: bold;
  margin-top: 38rpx;
  margin-bottom: 21rpx;
}
.unionid-fixed-msg view{
  text-align: center;
  color: #666666;
}
.unionid-fixed-submit{
  margin-top: 47rpx;
  border-top: 1rpx solid #e4e4e4;
  display: flex;
}
.unionid-fixed-submit button{
  width: 50%;
  text-align: center;
  background: #fff;
  font-size: 32rpx;
	color: #3ac756;
  line-height: 99rpx;
  border-radius: 0 0 26rpx 0; 
  flex-shrink: 0;
  height: 99rpx;
   padding: 0;
}
.unionid-fixed-submit view{
 
  flex-grow: 2;
  border-right: 1rpx solid #e4e4e4;
  height: 99rpx;
  line-height: 99rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999;
  border-radius: 0 0 0 26rpx;
}
.unionid-fixed-submit view button{
  width: 100%;
  color: #999;
  border-radius: 0 0 0 26rpx;
}