page {
  height: 100%;
}
.contain {
  width: 100%;
  height: 100%;
  overflow: scroll;
  background:rgba(246,248,250,1);
}
.header {
  background:rgba(255,255,255,1);
  padding: 37rpx 30rpx 0 30rpx;
}
.header-title {
  font-size:42rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:36px;
}
.information {
  display: flex;
  margin: 66rpx 0 47rpx;
}
.pic,.pic image {
  width:72rpx;
  height:72rpx;
}
.base-msg {
  width: 598rpx;
  margin-left: 21rpx;
}
.source,.type {
  display: flex;
  justify-content: space-between;
}
.source-name {
  font-size:28rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:36rpx;
}
.source-job,.type-time,.type-job {
  font-size:24rpx;
  color:rgba(174,175,178,1);
  line-height:36rpx;
}
.type {
  margin-top: 10rpx;
}
.line {
  width:690rpx;
  height:4rpx;
  background:rgba(51,51,51,1);
}
.tips {
  display: flex;
  justify-content: space-between;
  width:690rpx;
  height:180rpx;
  padding: 26rpx 20rpx;
  box-sizing: border-box;
  background:rgba(246,248,250,.7);
  border-radius:8rpx;
}
.tips-title {
  width: 520rpx;
  font-size:24rpx;
  line-height:40rpx;
  color:rgba(51,51,51,1);
}
.tips-pic image {
  width:128rpx;
  height:128rpx;
}
.content {
  padding: 0 32rpx 15rpx;
  font-size:32rpx;
  line-height:64rpx;
  background:#fff!important;
}
.special-column {
  margin-bottom: 100rpx;
  padding-left: 29rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  width:750rpx;
  overflow: hidden;
  background:rgba(255,255,255,1);
}
.column-title {
  font-size:36rpx;
  font-weight:bold;
  margin: 40rpx 0 20rpx;
}
.column-item {
  display: flex;
  width:720rpx;
  border-top: 1rpx solid rgba(235,235,235,1);
}
.item-des {
  width:472rpx;
}
.item-title {
  margin: 36rpx 26rpx 35rpx 0;
  font-size:28rpx;
  min-height: 76rpx;
  font-weight:bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.item-data {
  margin-bottom: 36rpx;
  font-size:24rpx;
  color:rgba(168,168,168,1);
}
.item-data text:nth-child(1) {
  margin-right: 44rpx;
}
.item-data text:nth-child(2) {
  margin-right: 35rpx;
}
.item-pic image {
  width:200rpx;
  height:150rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
  border-radius:12rpx;
}
.like {
  position: fixed;
  bottom: 0rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 30rpx;
  margin-top: 6rpx;
  box-sizing: border-box;
  width:750rpx;
  height:95rpx;
  background:rgba(255,255,255,1);
}
.like-section {
  display: flex;
  align-items: center;
  font-size:32rpx;
  color: #333333;
  line-height:36rpx;
}
.like-section1 image {
	width: 48rpx;
	height: 48rpx;
  margin-top: 4rpx;
}
.like-section2 image {
	width: 48rpx;
	height: 48rpx;
  margin-top: 2rpx;
}
.like-section3 image {
	width: 48rpx;
	height: 48rpx;
  margin-top: 4rpx;
}
.like-section4 image {
	width: 48rpx;
	height: 48rpx;
  margin-top: 4rpx;
}
.small-size {
  font-size: 28rpx;
}
.setcolor {
  color: #FF6E26;
}
.popup {
  width: 100%;
}
.popup-title {
  position: relative;
  margin: 0 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 104rpx;
  border-bottom: 1px solid #EBEBEB;
}
.toshare-title {
  font-size:32rpx;
}
.tocancel {
  position: absolute;
  font-size:28rpx;
  right: 30rpx;
  top: 30rpx;
  color:rgba(174,175,178,1);
}
.popup-share {
  position: relative;
  display: flex;
  justify-content: center;
  height: 215rpx;
}
.share-nav {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  width:120rpx;
  line-height:64rpx;
  font-size:28rpx;
}
.share-nav image {
  width:50rpx;
  height:44rpx;
  margin-top: 58rpx;
}
.share-nav view {
  margin-top: -35rpx;
}
.like-share {
  position: relative;
}
.share-button {
  position: absolute;
  width:120rpx;
  height: 70rpx;
  opacity: 0;
  z-index: 999;
}